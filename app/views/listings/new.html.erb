<h1>New Listing</h1>
<%= simple_form_for @listing do |f| %>
  <%= f.input :category, :collection => %w[Job Service] %>
  <%= f.input :title %>
  <%= f.input :description, placeholder: "description" %>
  <%= f.input :rate %>
  <%= f.input :suburb,
  input_html: {data: {suburb_autocomplete_target: "suburb"}},
  wrapper_html: {data: {controller: "suburb-autocomplete", suburb_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
