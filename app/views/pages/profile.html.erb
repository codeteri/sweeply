<div class="profile-page">
  <h1>Your Activity</h1>
  <div class="row">
    <div class="col-md-6 mb-4">
      <h2>Your Bookings</h2>
      <% if current_user.bookings.any? %>
        <% current_user.bookings.each do |booking| %>
          <div class="card mb-3">
            <div class="card-body">
              <h3 class="card-title"><%= booking.listing.title %></h3>
              <p class="card-text"><%= booking.date %></p>
              <p class="card-text"><%= booking.message %></p>
              <!-- other booking details -->
            </div>
          </div>
        <% end %>
      <% else %>
        <p>You have no bookings.</p>
      <% end %>
    </div>

    <div class="col-md-6 mb-4">
      <h2>Your Listings</h2>
      <% if current_user.listings.any? %>
        <% current_user.listings.each do |listing| %>
          <div class="card mb-3">
            <div class="card-body">
              <h3 class="card-title"><%= listing.title %></h3>
              <p class="card-text"><%= listing.category %></p>
              <p class="card-text"><%= listing.suburb %></p>
              <p class="card-text"><%= listing.rate %></p>
              <p class="card-text"><%= listing.description %></p>
              <!-- other listing details -->
            </div>
          </div>
        <% end %>
      <% else %>
        <p>You have no listings.</p>
      <% end %>
    </div>
  </div>
</div>
